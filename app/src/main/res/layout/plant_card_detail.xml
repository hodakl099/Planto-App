<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="100dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="100dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/plant_detail_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        >


        <TextView
            android:id="@+id/tv_plant_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Plant Type" />

        <TextView
            android:id="@+id/tv_plant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/tv_plant_type"
            app:layout_constraintTop_toBottomOf="@+id/tv_plant_type"
            tools:text="Plant Name" />


        <TextView
            android:id="@+id/tv_located_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/tv_plant_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_plant_name"
            tools:text="Located in " />


        <TextView
            android:id="@+id/tv_living_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_located_at"
            app:layout_constraintStart_toEndOf="@+id/tv_located_at"
            tools:text="Living Room" />

        <ImageView
            android:id="@+id/plant_img"
            android:layout_width="100dp"
            android:layout_height="103dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_baseline_photo_24"
            app:layout_constraintEnd_toEndOf="@+id/tv_plant_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_located_at"
            app:layout_constraintTop_toBottomOf="@+id/tv_located_at" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>